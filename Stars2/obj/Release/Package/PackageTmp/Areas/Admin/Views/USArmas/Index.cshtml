@model IEnumerable<Business.Mapping.Armas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Armas</h2>
                     @foreach (var item in Model)
                     {                                                 
                        <a class="grid" href="@Url.Action("Details", "USArmas", new { id = item.ID })">
                            <div class="imagehome">
                            <div class="img_layer"></div>
                            <img src="~/Content/Estilo/@(item.ID)a.jpg" style="width:100%;height:82%;" />
                            </div>
                                <div class="edic">
                                <p class="parahome">@Html.DisplayFor(modelItem => item.Nome)</p>
                            </div>
                        </a>

                     } 
