@model IEnumerable<Business.Mapping.Armas>    
<link href="~/Content/Estilo/Itens.css" rel="stylesheet" />
<link href="~/Content/Estilo/Sitegeral.css" rel="stylesheet" />
@{
    ViewBag.Title = "Lista de Armas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Armas</h2>
<a class="butedit" href="~/Armas/Create">Novo</a>
<br />
@foreach (var item in Model) {
<div class="grid">
    <div class="image">
        <img src="~/Content/Estilo/@(item.ID)a.jpg" style="width:100%"/>
    </div>
    <div class="descri">
        <p>Nome: @Html.DisplayFor(modelItem => item.Nome)</p>
        <p>Descrição: @Html.DisplayFor(modelItem => item.Descricao)</p>
    </div>
    <div class="edic">
       <p>
            <a class="butedit" href="@Url.Action("Edit", "Armas", new { id=item.ID })">
                Editar
            </a>
            <a class="butedit" href="@Url.Action("Details", "Armas", new { id=item.ID })">
                Detalhes
            </a>
            <a class="butedit" href="@Url.Action("Delete", "Armas", new { id=item.ID })">
                Deletar
            </a>
        </p>
    </div>
</div>
}

